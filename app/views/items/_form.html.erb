<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table id="items">
  <thead>
    <tr>
      <th>Description</th>
      <th>Quantity</th>
      <th>Rate</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <tr>
        <td class="item-description"><%= f.text_area :description, placeholder: "Enter item name/description" %></td>
        <td class ="item-quantity"><%= f.number_field :quantity %></td>
        <td class="item-rate"><%= f.text_field :rate %></td>
        <td class="item-amount"><%= f.text_field :amount %></td>
      </tr>

  </tbody>
</table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
